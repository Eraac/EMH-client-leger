<p class="well well-sm text-center">
    Soumi par vous et traitée
</p>

<div class="list-group">

    {% for submit in list %}

        <a href="{{ path('HIAFormReadRegistration', {'id': submit.id}) }}" class="list-group-item">
            <h4 class="list-group-item-heading">{{ submit.form.name }} <small>le {{ submit.registrationDate|date("d-m-Y à H:i") }} par vous</small></h4>
            <p class="list-group-item-text">
                {% if submit.new %}
                    <span class="label label-info">Nouveau</span>
                {% elseif submit.pending %}
                    <span class="label label-info">En cours</span>
                {% elseif submit.validate %}
                    <span class="label label-primary">Validé</span>
                {% elseif submit.accept %}
                    <span class="label label-success">Accepté</span>
                {% elseif submit.refuse %}
                    <span class="label label-danger">Refusé</span>
                {% endif %}
                {% if not submit.pending %}
                Par {{ submit.userValidate.username }}, le {{ submit.validationDate|date("d-m-Y à H:i") }}
                {% endif %}<br>
                {{ submit.userComment }}
            </p>
        </a>
    {% else %}
        <div class="list-group-item">
            <p class="list-group-item-text">
                Aucun formulaire traité
            </p>
        </div>
    {% endfor %}

</div>