        <div class="page-header">
            <h1 class="text-success">Liste des soumissions non traitées</h1>
        </div>
    </div>

    <div class="col-lg-6">
        {# Liste des soumissions envoyé par les autres que vous avez le droit de lire et non traitée #}
        {{ render(controller("HIAFormBundle:Block:unreadOther", {'offset': offset, 'limit': limit})) }}
    </div>

    <div class="col-lg-6">
        {# Liste des soumissions par vous envoyé non traitée #}
        {{ render(controller("HIAFormBundle:Block:unreadUser", {'offset': offset, 'limit': limit})) }}
    </div>

{% endblock body %}
